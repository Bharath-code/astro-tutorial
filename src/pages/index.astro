---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting";
const pageTitle = "Home Page";
---
<!--like children in react js -->
<BaseLayout pageTitle={pageTitle}>
	<h2>My awesome blog subtitle</h2>
	<!-- <Greeting messages={["Hi", "Hello", "Howdy", "Hey there"]}/> -->
	<!--
		hydrated component because client:load directive tells Astro to 
		send and rerun its JavaScript to the client when the page loads, 
		making the component interactive. We call this a hydrated component.
	 -->
	<Greeting client:load messages={["Hej", "Hallo", "Hola", "Habari"]} />
</BaseLayout>
